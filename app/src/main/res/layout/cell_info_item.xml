<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/dash" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/dash" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">


        <TextView
            android:id="@+id/tv_networkType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:text="Network Type: "
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RSRP: " />

                    <TextView
                        android:id="@+id/tv_rsrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" " />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RSRQ: " />

                    <TextView
                        android:id="@+id/tv_rsrq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" " />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SNR: " />

                    <TextView
                        android:id="@+id/tv_snr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TAC: " />


                    <TextView
                        android:id="@+id/tv_lte_tac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PCI: " />


            <TextView
                android:id="@+id/tv_lte_pci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingHorizontal="16dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ECI: " />


            <TextView
                android:id="@+id/tv_lte_eci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CID: " />


            <TextView
                android:id="@+id/tv_lte_cid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingHorizontal="16dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="eNB: " />


            <TextView
                android:id="@+id/tv_enb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingHorizontal="16dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UL Modulation: " />


            <TextView
                android:id="@+id/tv_lte_ul_modulation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="n/a" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingHorizontal="16dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CQI: " />


            <TextView
                android:id="@+id/tv_lte_cqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="n/a" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingHorizontal="16dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CQI Index: " />


            <TextView
                android:id="@+id/tv_lte_cqi_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="n/a" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:text="" />


        <TextView
            android:id="@+id/tv_network_technology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:text="Network Technology: " />


        <LinearLayout
            android:id="@+id/ll_5g_strength_values"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/dash" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/dash" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/tv_networkType_nsa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Network Type: "
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SS RSRP: " />

                    <TextView
                        android:id="@+id/tv_ssrsrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="loading" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SS RSRQ: " />

                    <TextView
                        android:id="@+id/tv_ssrsrq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="loading" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SS SINR: " />

                    <TextView
                        android:id="@+id/tv_sssinr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="loading" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TAC: " />


                    <TextView
                        android:id="@+id/tv_nr_tac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="loading" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PCI: " />


                    <TextView
                        android:id="@+id/tv_nr_pci"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="loading" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NCI: " />


                    <TextView
                        android:id="@+id/tv_nr_nci"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="loading" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DL / UL Modulation: " />


                    <TextView
                        android:id="@+id/tv_nr_dl_modulation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="n/a" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" / " />


                    <TextView
                        android:id="@+id/tv_nr_ul_modulation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="n/a" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CQI: " />


                    <TextView
                        android:id="@+id/tv_nr_cqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="n/a" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CQI Index: " />


                    <TextView
                        android:id="@+id/tv_nr_cqi_index"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="n/a" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CID: " />


                    <TextView
                        android:id="@+id/tv_nr_cid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="gNB: " />


                    <TextView
                        android:id="@+id/tv_gnb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_nsa_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
