<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid line (background) -->
    <item>
        <shape
            android:shape="line">
            <stroke
                android:width="1dp"
                android:color="#463B39" />
        </shape>
    </item>
    <!-- Dashed line (overlay) -->
    <item android:right="6dp">
        <shape
            android:shape="line">
            <stroke
                android:width="1dp"
                android:color="#FFFFFF"
                android:dashWidth="4dp"
                android:dashGap="4dp" />
        </shape>
    </item>
</layer-list>
